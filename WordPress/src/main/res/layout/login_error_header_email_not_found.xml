<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_extra_large" >

    <TextView
        android:id="@+id/heading"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_extra_large"
        android:layout_marginLeft="@dimen/margin_extra_large"
        android:layout_marginStart="@dimen/margin_extra_large"
        android:layout_marginRight="@dimen/margin_extra_large"
        android:layout_width="match_parent"
        android:text="@string/login_error_header_email_not_found_heading"
        style="@style/LoginTheme.Heading" >
    </TextView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_details"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_extra_extra_medium_large"
        android:layout_marginEnd="@dimen/margin_large"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="@dimen/card_elevation"
        app:cardUseCompatPadding="true" >

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_extra_large"
            android:paddingRight="@dimen/margin_extra_large" >

            <ImageView
                android:contentDescription="@string/description_google_logo"
                android:layout_height="@dimen/avatar_sz_login_epilogue"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_extra_medium_large"
                android:layout_width="@dimen/avatar_sz_login_epilogue"
                app:srcCompat="@drawable/ic_google_60dp" >
            </ImageView>

            <org.wordpress.android.widgets.WPTextView
                android:id="@+id/email"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                tools:text="pamela@gmail.com"
                style="@style/LoginTheme.Subhead" >
            </org.wordpress.android.widgets.WPTextView>

            <org.wordpress.android.widgets.WPTextView
                android:id="@+id/username"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_extra_medium_large"
                android:layout_width="match_parent"
                android:text="@string/login_error_header_email_not_found_message_short"
                style="@style/LoginTheme.Username" >
            </org.wordpress.android.widgets.WPTextView>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/subheading"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_extra_extra_medium_large"
        android:layout_marginEnd="@dimen/margin_extra_large"
        android:layout_marginLeft="@dimen/margin_extra_large"
        android:layout_marginRight="@dimen/margin_extra_large"
        android:layout_marginStart="@dimen/margin_extra_large"
        android:layout_width="match_parent"
        android:text="@string/login_error_header_email_not_found_message_long"
        style="@style/LoginTheme.Subhead" >
    </TextView>

</LinearLayout>
