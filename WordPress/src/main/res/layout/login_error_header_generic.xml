<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_extra_large"
    tools:ignore="UseCompoundDrawables" >

    <android.support.v7.widget.AppCompatImageView
        android:adjustViewBounds="true"
        android:contentDescription="@string/login_error_header_generic_description"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_extra_medium_large"
        android:layout_marginEnd="@dimen/margin_large"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_width="match_parent"
        app:srcCompat="@drawable/img_illustration_404_400dp" >
    </android.support.v7.widget.AppCompatImageView>

   <TextView
        android:id="@+id/subheading"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_extra_extra_medium_large"
        android:layout_marginEnd="@dimen/margin_extra_large"
        android:layout_marginLeft="@dimen/margin_extra_large"
        android:layout_marginRight="@dimen/margin_extra_large"
        android:layout_marginStart="@dimen/margin_extra_large"
        android:layout_width="match_parent"
        android:text="@string/login_error_header_generic_message"
        style="@style/LoginTheme.Subhead" >
    </TextView>

</LinearLayout>
